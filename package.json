{
  "name": "shatter",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && npm run buildexample",
    "buildexample": "parcel build examples/js/*.js -d examples/js/build/",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "testreport": "npx http-server jest-screenshot-report/"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "files": [
    "dist/"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "./setup-framework.js"
    ],
    "reporters": [
      "default",
      "jest-screenshot/reporter"
    ]
  },
  "browserslist": [
    "last 3 and_chr versions",
    "last 3 chrome versions",
    "last 3 opera versions",
    "last 3 ios_saf versions",
    "last 3 safari versions"
  ],
  "dependencies": {
    "@types/d3-voronoi": "^1.1.9",
    "d3-voronoi": "^1.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "babel-jest": "^26.6.1",
    "fs-extra": "^9.0.1",
    "jest": "^26.6.1",
    "jest-screenshot": "^0.3.1",
    "parcel": "^1.12.4",
    "typescript": "^4.0.5"
  }
}
